
@{
    ViewData["Title"] = "Order Success";
    Layout = null;
}

<style>
    body {
        background-color: #fff;
        color: #111;
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
    }

    .order-container {
        max-width: 500px;
        margin: 120px auto;
        background: #fff;
        border: 1px solid #e5e5e5;
        border-radius: 18px;
        box-shadow: 0 6px 25px rgba(0, 0, 0, 0.05);
        padding: 50px 40px;
        text-align: center;
        animation: fadeIn 0.6s ease-in-out;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(15px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .success-icon {
        font-size: 70px;
        color: #16a34a;
        border: 3px solid #16a34a;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 100px;
        height: 100px;
        margin-bottom: 20px;
        animation: popIn 0.5s ease-out;
    }

    @@keyframes popIn {
        0%

    {
        transform: scale(0.6);
        opacity: 0;
    }

    100% {
        transform: scale(1);
        opacity: 1;
    }

    }

    .order-title {
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .order-subtitle {
        font-size: 15px;
        color: #666;
        margin-bottom: 30px;
    }

    .summary {
        font-size: 15px;
        line-height: 1.6;
        color: #333;
    }

        .summary strong {
            display: block;
            margin-top: 8px;
            font-size: 16px;
            color: #000;
        }

    .continue-btn {
        margin-top: 35px;
        background-color: #000;
        color: #fff;
        border: none;
        border-radius: 30px;
        padding: 12px 40px;
        font-size: 15px;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: 0.3s ease;
    }

        .continue-btn:hover {
            background-color: #333;
            transform: translateY(-2px);
        }
</style>

<div class="order-container">
    <div class="success-icon">✓</div>

    <h2 class="order-title">Order Placed Successfully!</h2>
    <p class="order-subtitle">Thank you for shopping with us 💖</p>

    <button class="continue-btn" onclick="window.location.href='/Home/Index'">
        Continue Shopping
    </button>
</div>
