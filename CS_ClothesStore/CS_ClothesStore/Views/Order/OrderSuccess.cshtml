@using CS_ClothesStore.Models.DTOs
@model OrderDTO
@{
    ViewData["Title"] = "Order Success";
}

<style>
    body {
        background-color: #fff;
        color: #111;
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
    }

    .order-container {
        max-width: 700px;
        margin: 80px auto;
        background: #fff;
        border: 1px solid #e5e5e5;
        border-radius: 16px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.05);
        padding: 40px 50px;
        text-align: center;
    }

    .success-icon {
        font-size: 70px;
        color: #000;
        border: 3px solid #000;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 100px;
        height: 100px;
        margin-bottom: 20px;
        animation: popIn 0.6s ease-out;
    }

    @@keyframes popIn {
        0%

    {
        transform: scale(0.5);
        opacity: 0;
    }

    100% {
        transform: scale(1);
        opacity: 1;
    }

    }

    .order-title {
        font-size: 26px;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .order-subtitle {
        font-size: 16px;
        color: #555;
        margin-bottom: 35px;
    }

    .summary {
        text-align: left;
        border-top: 1px solid #eee;
        padding-top: 20px;
        margin-top: 30px;
    }

    .summary-item {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
        font-size: 15px;
    }

        .summary-item span:first-child {
            color: #555;
        }

        .summary-item span:last-child {
            font-weight: 600;
            color: #000;
        }

    .product-list {
        border-top: 1px solid #eee;
        padding-top: 15px;
        margin-top: 20px;
    }

    .product {
        display: flex;
        justify-content: space-between;
        padding: 10px 0;
        border-bottom: 1px solid #f5f5f5;
        font-size: 15px;
    }

        .product:last-child {
            border-bottom: none;
        }

    .continue-btn {
        margin-top: 35px;
        background-color: #000;
        color: #fff;
        border: none;
        border-radius: 30px;
        padding: 12px 40px;
        font-size: 15px;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: 0.3s ease;
    }

        .continue-btn:hover {
            background-color: #333;
            transform: translateY(-2px);
        }

    .order-info {
        font-size: 14px;
        color: #888;
        margin-top: 10px;
    }
</style>

<div class="order-container">
    <div class="success-icon">
        ✓
    </div>

    <h2 class="order-title">Order Placed Successfully</h2>
    <p class="order-subtitle">Thank you for your purchase! Your order has been placed successfully.</p>

    <div class="summary">
        <div class="summary-item">
            <span>Order ID</span>
            <span>#@Model.Id</span>
        </div>
        <div class="summary-item">
            <span>Payment Method</span>
            <span>@Model.PaymentMethod</span>
        </div>
        <div class="summary-item">
            <span>Shipping Address</span>
            <span>@Model.ShippingAddress</span>
        </div>
        @* <div class="summary-item"> *@
        @*     <span>Delivery Date</span> *@
        @*     <span>@Model.DeliveryDate?.ToString("dd/MM/yyyy")</span> *@
        @* </div> *@
        <div class="summary-item">
            <span>Total Amount</span>
            <span>@Model.TotalPrice.ToString("N0") VND</span>
        </div>
    </div>

    @* <div class="product-list"> *@
    @*     <h5 class="text-start mb-3" style="font-weight:600;">Order Items</h5> *@
    @*     @foreach (var item in Model.) *@
    @*     { *@
    @*         <div class="product"> *@
    @*             <span>@item.ProductName (x@item.Quantity)</span> *@
    @*             <span>@item.Price.ToString("N0") VND</span> *@
    @*         </div> *@
    @*     } *@
    @* </div> *@

    <button class="continue-btn" onclick="window.location.href='/Home/Index'">
        Continue Shopping
    </button>

    <p class="order-info">
        A confirmation email has been sent to your registered email address.
    </p>
</div>
