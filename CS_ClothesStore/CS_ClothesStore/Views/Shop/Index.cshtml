	<!--AddToCart-->
	@section Scripts {
		<script>
			let selectedProductId = 0;

			var user = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(user ?? new()));

			var userId = user?.Id;

			// Hiển thị modal khi click
			$(".js-show-modal1").on("click", function () {
				selectedProductId = $(this).data("id");
				$("#modalName").text($(this).data("name"));
				$("#modalPrice").text($(this).data("price") + " VND");
				$("#modalDescription").text($(this).data("description"));
				$("#modalDiscount").text($(this).data("discount") + "%");
				$("#modalImage").attr("src", $(this).data("image"));
				$(".js-modal1").addClass("show-modal1");
			});

			// Đóng modal
			$(".js-hide-modal1").on("click", function () {
				$(".js-modal1").removeClass("show-modal1");
			});

			// Xử lý Add To Cart
			$("#btnAddToCart").on("click", async function () {
				const accountId = userId;
				const productId = selectedProductId;
				const colorId = $("#modalColor").val();
				const sizeId = $("#modalSize").val();
				const quantity = $("#modalQuantity").val();

				if (!colorId || !sizeId) {
					alert("Please select color and size!");
					return;
				}

				const payload = { accountId, productId, colorId, sizeId, quantity };

				try {
					const res = await fetch("http://localhost:5013/api/Cart/AddToCart", {
						method: "POST",
						headers: { "Content-Type": "application/json" },
						body: JSON.stringify(payload)
					});

					const data = await res.json();

					if (data.code === "1000") {
						$("#addToCartMsg").show().delay(3000).fadeOut();
					} else {
						$("#addToCartErr").text(data.result || "Add failed!").show().delay(3000).fadeOut();
					}
				} catch (e) {
					console.error(e);
					$("#addToCartErr").text("Network or server error!").show().delay(3000).fadeOut();
				}
			});
		</script>
	}

