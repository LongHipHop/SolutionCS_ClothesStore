@model CS_ClothesStore.Models.DTOs.ProductDTO
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Corona Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../../assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../../assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="../../assets/vendors/select2/select2.min.css">
    <link rel="stylesheet" href="../../assets/vendors/select2-bootstrap-theme/select2-bootstrap.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="../../assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="../../assets/images/favicon.png" />

    <style>
        body {
            background-color: #0d0d0d;
            color: #f5f5f5;
            font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
        }

        .modern-table {
            background: #1a1a1a;
            border-collapse: separate;
            border-spacing: 0;
            width: 100%;
            border-radius: 12px;
            overflow: hidden;
        }

            .modern-table th {
                background: #111;
                color: #0090e7;
                text-transform: uppercase;
                letter-spacing: 0.5px;
                font-weight: 600;
                padding: 12px 16px;
                width: 25%;
                border-bottom: 1px solid #333;
            }

            .modern-table td {
                background: #181818;
                color: #e0e0e0;
                padding: 12px 16px;
                border-bottom: 1px solid #2a2a2a;
            }

            .modern-table tr:hover td {
                background: rgba(0, 255, 255, 0.05);
                transition: background 0.3s ease;
            }

        .badge {
            font-size: 0.85rem;
            padding: 6px 12px;
            border-radius: 8px;
            font-weight: 500;
            letter-spacing: 0.3px;
            text-transform: uppercase;
        }

            .badge.bg-danger {
                background-color: #ff4c4c;
                color: white;
                box-shadow: 0 0 10px rgba(255, 76, 76, 0.4);
            }

            .badge.bg-success {
                background-color: #00c851;
                color: white;
                box-shadow: 0 0 10px rgba(0, 200, 81, 0.4);
            }

            .badge.bg-warning {
                background-color: #ffbb33;
                color: #1a1a1a;
                box-shadow: 0 0 10px rgba(255, 187, 51, 0.4);
            }

        .product-img {
            width: 100px;
            height: 100px;
            border-radius: 12px;
            object-fit: cover;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .product-img:hover {
                transform: scale(1.05);
                box-shadow: 0 0 20px rgba(0, 255, 255, 0.6);
            }

        .table-title {
            text-align: center;
            font-size: 1.5rem;
            margin-bottom: 20px;
            color: #0090e7;
            letter-spacing: 1px;
        }
    </style>

</head>
<body>


    <!-- partial -->
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title"> Form elements </h3>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Forms</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Form elements</li>
                    </ol>
                </nav>
            </div>
            <div class="row">
                <div class="col-12 grid-margin">
                    <div class="card">
                        <div class="container py-4">
                            <h3 class="table-title">Account Information</h3>
                            <table class="modern-table">
                                <tbody>
                                    <tr>
                                        <th>Product Name</th>
                                        <td>@Model.ProductName</td>
                                    </tr>
                                    <tr>
                                        <th>Description</th>
                                        <td>@Model.Description</td>
                                    </tr>
                                    <tr>
                                        <th>Category</th>
                                        <td>@Model.CategoryName</td>
                                    </tr>
                                    <tr>
                                        <th>Price</th>
                                        <td>@String.Format("{0:N0}₫", @Model.Price)</td>
                                    </tr>
                                    <tr>
                                        <th>Discount</th>
                                        <td>@String.Format("{0:N0}₫", @Model.Discount)</td>
                                    </tr>
                                    <tr>
                                        <th>Product Image</th>
                                        <td>
                                            @if (!string.IsNullOrEmpty(Model.Image))
                                            {
                                                <img style="width: 135px !important; height: 100% !important; border-radius:0;" src="~/images/@Model.Image" alt="User Image" class="product-img" />
                                            }
                                            else
                                            {
                                                <span>No image available</span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Stock Quantity</th>
                                        <td>@Model.StockQuantity</td>
                                    </tr>
                                    <tr>
                                        <th>Created At</th>
                                        <td>@(Model.CreatedAt.ToString("dd/MM/yyyy") ?? "-")</td>
                                    </tr>
                                    <tr>
                                        <th>Updated At</th>
                                        <td>@(Model.UpdatedAt.ToString("dd/MM/yyyy") ?? "-")</td>
                                    </tr>
                                    
                                </tbody>
                            </table>

                            <div class="text-end mt-4">
                                <a asp-action="Index" asp-controller="Product" class="btn btn-outline-secondary back-btn">
                                    <i class="mdi mdi-arrow-left"></i> Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
        <!-- partial:../../partials/_footer.html -->
        <footer class="footer">
            <div class="d-sm-flex justify-content-center justify-content-sm-between">
                <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © bootstrapdash.com 2020</span>
                <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"> Free <a href="https://www.bootstrapdash.com/bootstrap-admin-template/" target="_blank">Bootstrap admin templates</a> from Bootstrapdash.com</span>
            </div>
        </footer>
        <!-- partial -->
    </div>
    <!-- main-panel ends -->
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../../assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="../../assets/vendors/select2/select2.min.js"></script>
    <script src="../../assets/vendors/typeahead.js/typeahead.bundle.min.js"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../../assets/js/off-canvas.js"></script>
    <script src="../../assets/js/hoverable-collapse.js"></script>
    <script src="../../assets/js/misc.js"></script>
    <script src="../../assets/js/settings.js"></script>
    <script src="../../assets/js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="../../assets/js/file-upload.js"></script>
    <script src="../../assets/js/typeahead.js"></script>
    <script src="../../assets/js/select2.js"></script>
    <!-- End custom js for this page -->
</body>
</html>