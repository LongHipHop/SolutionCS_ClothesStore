    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const ctx = document.getElementById("old-new-account-history");

            // Lấy dữ liệu từ server (ép kiểu integer)
            const oldAccounts = parseInt('@(ViewBag.OldAccounts ?? 0)');
            const newAccounts = parseInt('@(ViewBag.NewAccounts ?? 0)');
            const maxValue = Math.max(oldAccounts, newAccounts);

            new Chart(ctx, {
                type: "bar",
                data: {
                    labels: ["Old Accounts", "New Accounts"],
                    datasets: [{
                        label: "Account Count",
                        data: [oldAccounts, newAccounts],
                        backgroundColor: [
                            "rgba(54, 162, 235, 0.6)",
                            "rgba(75, 192, 192, 0.6)"
                        ],
                        borderColor: [
                            "rgba(54, 162, 235, 1)",
                            "rgba(75, 192, 192, 1)"
                        ],
                        borderWidth: 1,
                        borderRadius: 8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        title: {
                            display: true,
                            text: "Accounts Overview",
                            font: { size: 16 }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                // ✅ Chỉ hiển thị số nguyên
                                callback: function (value) {
                                    if (Number.isInteger(value)) {
                                        return value;
                                    }
                                    return null;
                                },
                                stepSize: 1
                            },
                            afterBuildTicks: function (scale) {
                                const max = Math.ceil(maxValue + 1);
                                scale.ticks = [];
                                for (let i = 0; i <= max; i++) {
                                    scale.ticks.push(i);
                                }
                                return scale.ticks;
                            }
                        }
                    }
                }
            });
        });
    </script>

