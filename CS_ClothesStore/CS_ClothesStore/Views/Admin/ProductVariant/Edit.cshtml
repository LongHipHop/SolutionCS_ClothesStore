            <div class="row">
                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Edit Product Variant</h4>
                            <p class="card-description">Update product variant information</p>

                            <form action="/Admin/ProductVariant/Edit" method="post" enctype="multipart/form-data" class="forms-sample">
                                <input type="hidden" name="Id" value="@Model.Id" />

                                <div class="form-group">
                                    <label for="exampleInputName1">Product Name</label>
                                    <input type="text" class="form-control" id="exampleInputName1" name="ProductName"
                                           placeholder="Enter product name" value="@Model.ProductName">
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputPhone">Color Name</label>
                                    <input type="text" class="form-control" id="exampleInputPhone" name="ColorName"
                                           placeholder="Enter color name" value="@Model.ColorName">
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputPhone">Size Name</label>
                                    <input type="text" class="form-control" id="exampleInputPhone" name="SizeName"
                                           placeholder="Enter size name" value="@Model.SizeName">
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputPhone">Stock</label>
                                    <input type="text" class="form-control" id="exampleInputPhone" name="Stock"
                                           placeholder="Enter stock" value="@Model.Stock">
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputPhone">Price</label>
                                    <input type="text" class="form-control" id="exampleInputPhone" name="Price"
                                           placeholder="Enter price" value="@Model.Price">
                                </div>

                                @* <div class="form-group"> *@
                                @*     <label for="exampleSelectGender">Gender</label> *@
                                @*     <select class="form-control" id="exampleSelectGender" name="Gender"> *@
                                @*         @if (Model.Gender == "Male") *@
