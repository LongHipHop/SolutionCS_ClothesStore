@model CS_ClothesStore.Models.ViewModels.RegisterModel

@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Register - CS Clothes Store</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Inter', sans-serif;
            height: 100vh;
        }

        .register-container {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .register-card {
            background: #ffffff;
            border: 1px solid #e0e0e0;
            border-radius: 16px;
            box-shadow: 0 6px 16px rgba(0, 0, 0, 0.06);
            padding: 40px;
            width: 100%;
            max-width: 440px;
        }

        .register-title {
            font-weight: 600;
            color: #212529;
            text-align: center;
            margin-bottom: 25px;
        }

        .form-label {
            font-weight: 500;
            color: #333;
        }

        .form-control {
            border-radius: 10px;
            border: 1px solid #ccc;
            padding: 10px 14px;
        }

            .form-control:focus {
                border-color: #000;
                box-shadow: none;
            }

        .btn-primary {
            background-color: #000;
            border-color: #000;
            border-radius: 10px;
            padding: 10px 0;
            font-weight: 500;
            transition: all 0.2s ease;
        }

            .btn-primary:hover {
                background-color: #333;
                border-color: #333;
            }

        .btn-google {
            background-color: #fff;
            color: #000;
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 10px 0;
            width: 100%;
            font-weight: 500;
            transition: all 0.2s ease;
        }

            .btn-google:hover {
                background-color: #f2f2f2;
            }

        .sign-in {
            text-align: center;
            margin-top: 15px;
        }

        .alert {
            margin-top: 15px;
            border-radius: 10px;
        }

        .btn-close {
            filter: invert(1);
        }
    </style>
</head>

<body>
    <div class="register-container">
        <div class="register-card">
            <h3 class="register-title">Create Account</h3>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-@TempData["MessageType"] alert-dismissible fade show" role="alert">
                    @TempData["Message"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="Register" method="post">
                <div class="mb-3">
                    <label asp-for="Fullname" class="form-label">Full Name</label>
                    <input asp-for="Fullname" class="form-control" placeholder="Enter your full name" required />
                    <span asp-validation-for="Fullname" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" required />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" required />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" required />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Create Account</button>

                <div class="mt-3">
                    <a href="/Authentication/LoginWithGoogle" class="btn btn-google">
                        <i class="bi bi-google me-2"></i> Continue with Google
                    </a>
                </div>

                <p class="sign-in text-muted mt-3">
                    Already have an account?
                    <a href="/Authentication/Login" class="text-dark fw-semibold">Sign In</a>
                </p>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
