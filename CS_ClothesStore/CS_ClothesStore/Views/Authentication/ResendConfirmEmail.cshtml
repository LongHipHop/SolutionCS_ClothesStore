@{
    ViewData["Title"] = "Resend Confirmation Email";
    Layout = null;
    var email = ViewBag.Email ?? Context.Request.Query["email"].ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - CS Clothes Store</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">


    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
        }

        .resend-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .resend-card {
            background: #fff;
            border: 1px solid #e0e0e0;
            border-radius: 16px;
            box-shadow: 0 6px 16px rgba(0, 0, 0, 0.06);
            padding: 40px;
            width: 100%;
            max-width: 420px;
            text-align: center;
        }

            .resend-card h3 {
                font-weight: 600;
                margin-bottom: 15px;
            }

        .text-muted {
            font-size: 0.95rem;
        }

        .btn-primary {
            background-color: #000;
            border-color: #000;
            border-radius: 10px;
            padding: 10px 0;
            font-weight: 500;
            transition: all 0.2s ease;
            width: 100%;
        }

            .btn-primary:hover {
                background-color: #333;
                border-color: #333;
            }

        .alert {
            border-radius: 10px;
        }

        .sign-up {
            margin-top: 20px;
            font-size: 0.95rem;
        }

            .sign-up a {
                font-weight: 600;
                text-decoration: none;
                color: #000;
            }

                .sign-up a:hover {
                    text-decoration: underline;
                }

        .mdi-email-send {
            font-size: 3rem;
            color: #000;
        }
    </style>
</head>

<body>
    <div class="resend-container">
        <div class="resend-card">
            <i class="mdi mdi-email-send mb-3"></i>
            <h3>Resend Confirmation Email</h3>
            <p class="text-muted mb-4">Didn’t get the confirmation email? Click below to resend it.</p>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-@TempData["MessageType"] alert-dismissible fade show" role="alert">
                    @TempData["Message"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="ResendConfirmEmail" asp-controller="Authentication" method="post">
                <input type="hidden" name="email" value="@email" />
                <button type="submit" class="btn btn-primary">Resend Confirmation</button>
            </form>

            <p class="sign-up">
                Remember your password?
                <a href="/Authentication/Login">Login</a>
            </p>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
