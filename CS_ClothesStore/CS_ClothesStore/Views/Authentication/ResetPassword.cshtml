@model CS_ClothesStore.Models.ViewModels.ResetPasswordModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Reset Password - CS_ClothesStore</title>

    <!-- plugins:css -->
    <link rel="stylesheet" href="~/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/assets/vendors/css/vendor.bundle.base.css">
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="shortcut icon" href="~/assets/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="row w-100 m-0">
                <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
                    <div class="card col-lg-4 mx-auto">
                        <div class="card-body px-5 py-5">
                            <h3 class="card-title text-center mb-3">Reset Password</h3>

                            @if (ViewBag.Message != null)
                            {
                                <div class="alert alert-@ViewBag.MessageType alert-dismissible fade show" role="alert">
                                    @ViewBag.Message
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }

                            <form asp-action="ResetPassword" asp-controller="Authentication" method="post">
                                <input type="hidden" name="Email" value="@Model.Email" />
                                <input type="hidden" name="Token" value="@Model.Token" />

                                <div class="form-group">
                                    <label for="NewPassword">New Password</label>
                                    <input type="password" name="NewPassword" id="NewPassword" class="form-control p_input" placeholder="Enter new password" required />
                                </div>

                                <div class="form-group">
                                    <label for="ConfirmPassword">Confirm Password</label>
                                    <input type="password" name="ConfirmPassword" id="ConfirmPassword" class="form-control p_input" placeholder="Confirm new password" required />
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary btn-block enter-btn">Reset Password</button>
                                </div>

                                <p class="sign-up mt-3 text-center">
                                    <a href="/Authentication/Login">Back to Login</a>
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- content-wrapper ends -->
            </div>
        </div>
    </div>

    <!-- plugins:js -->
    <script src="~/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/assets/js/off-canvas.js"></script>
    <script src="~/assets/js/hoverable-collapse.js"></script>
    <script src="~/assets/js/misc.js"></script>
</body>
</html>
