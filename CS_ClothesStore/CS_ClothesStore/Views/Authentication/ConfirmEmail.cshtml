@{
    ViewData["Title"] = "Confirm Email";
    Layout = null;

    string messageType = ViewBag.MessageType ?? "danger";
    string message = ViewBag.Message ?? "Something went wrong!";
    string email = ViewBag.Email ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - CS Clothes Store</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
        }

        .confirm-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .confirm-card {
            background: #fff;
            border-radius: 16px;
            border: 1px solid #e0e0e0;
            box-shadow: 0 6px 16px rgba(0, 0, 0, 0.06);
            padding: 40px;
            max-width: 420px;
            width: 100%;
            text-align: center;
        }

        .confirm-icon {
            font-size: 3rem;
        }

        .btn-primary,
        .btn-warning,
        .btn-danger {
            border-radius: 10px;
            padding: 10px 0;
            width: 100%;
            font-weight: 500;
        }

        .text-success,
        .text-warning,
        .text-danger {
            font-weight: 600;
        }

        .footer-text {
            margin-top: 30px;
            font-size: 0.9rem;
            color: #777;
        }
    </style>
</head>

<body>
    <div class="confirm-container">
        <div class="confirm-card">
            <h3 class="fw-semibold mb-3">Email Confirmation</h3>
            <p class="text-muted mb-4">Please review the message below</p>

            @if (messageType == "success")
            {
                <i class="mdi mdi-check-circle text-success confirm-icon"></i>
                <h5 class="text-success mt-3">@message</h5>

                <div class="mt-4">
                    <a href="/Authentication/Login" class="btn btn-primary">Go to Login</a>
                </div>
            }
            else if (messageType == "warning")
            {
                <i class="mdi mdi-alert text-warning confirm-icon"></i>
                <h5 class="text-warning mt-3">@message</h5>

                <form asp-action="ResendConfirmEmail" asp-controller="Authentication" method="post" class="mt-4">
                    <input type="hidden" name="email" value="@email" />
                    <button type="submit" class="btn btn-warning">Resend Confirmation</button>
                </form>
            }
            else
            {
                <i class="mdi mdi-close-circle text-danger confirm-icon"></i>
                <h5 class="text-danger mt-3">@message</h5>

                <form asp-action="ResendConfirmEmail" asp-controller="Authentication" method="post" class="mt-4">
                    <input type="hidden" name="email" value="@email" />
                    <button type="submit" class="btn btn-danger">Resend Confirmation</button>
                </form>
            }

            <div class="footer-text">
                © 2025 CS Clothes Store. All rights reserved.
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
