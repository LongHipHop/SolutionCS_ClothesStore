@model CS_ClothesStore.Models.DTOs.AccountDTO
@{
    ViewData["Title"] = "Profile";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #f5f6fa;
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
        color: #333;
    }

    /* --- NAVBAR --- */
    .navbar {
        background: linear-gradient(90deg, #111, #444);
        padding: 10px 40px;
    }

    .navbar-brand {
        color: #fff !important;
        font-weight: 700;
        font-size: 22px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .navbar-nav .nav-link {
        color: #ddd !important;
        margin-right: 15px;
        font-weight: 500;
        transition: 0.3s;
    }

        .navbar-nav .nav-link:hover {
            color: #fff !important;
        }

    .profile-container {
        margin-top: 60px;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding: 30px;
    }

    .profile-card {
        background-color: #fff;
        border-radius: 16px;
        box-shadow: 0 6px 25px rgba(0,0,0,0.08);
        padding: 40px 50px;
        max-width: 850px;
        width: 100%;
        transition: 0.3s;
    }

        .profile-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.12);
        }

    .profile-header {
        display: flex;
        align-items: center;
        gap: 25px;
        border-bottom: 1px solid #eee;
        padding-bottom: 20px;
        margin-bottom: 25px;
    }

    .profile-avatar {
        width: 110px;
        height: 110px;
        border-radius: 50%;
        background-color: #333;
        color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 42px;
        text-transform: uppercase;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

        .profile-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .profile-info h2 {
        margin: 0;
        font-weight: 700;
        color: #222;
    }

    .profile-info p {
        margin: 5px 0;
        color: #666;
        font-size: 15px;
    }

    .profile-details {
        margin-top: 20px;
    }

        .profile-details .row {
            padding: 10px 0;
            border-bottom: 1px solid #f0f0f0;
        }

        .profile-details label {
            font-weight: 600;
            color: #555;
        }

    .btn-edit {
        background: linear-gradient(90deg, #111, #444);
        color: #fff;
        border-radius: 10px;
        padding: 10px 20px;
        text-decoration: none;
        font-weight: 500;
        transition: 0.3s;
    }

        .btn-edit:hover {
            background: linear-gradient(90deg, #333, #666);
            color: #fff;
        }

    .btn-change-password {
        background: linear-gradient(90deg, #111, #444);
        color: #fff;
        border-radius: 10px;
        padding: 10px 20px;
        text-decoration: none;
        font-weight: 500;
        transition: 0.3s;
    }

        .btn-change-password:hover {
            background: linear-gradient(90deg, #333, #666);
            color: #fff;
        }

    /* --- Responsive --- */
    @@media (max-width: 768px) {
        .profile-card

    {
        padding: 25px;
    }

    .profile-header {
        flex-direction: column;
        text-align: center;
    }

    .profile-avatar {
        margin-bottom: 15px;
    }

    }
</style>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark">
    <a class="navbar-brand" href="/">ClothesStore</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
            <li class="nav-item"><a href="/" class="nav-link"><i class="fa-solid fa-house"></i> Home</a></li>
            <li class="nav-item"><a href="/Shop" class="nav-link"><i class="fa-solid fa-store"></i> Shop</a></li>
            <li class="nav-item"><a href="/ShoppingCart" class="nav-link"><i class="fa-solid fa-cart-shopping"></i> Cart</a></li>
            <li class="nav-item"><a href="/Profile" class="nav-link active"><i class="fa-solid fa-user"></i> Profile</a></li>
            <li class="nav-item d-flex align-items-center">
                <form asp-controller="Authentication" asp-action="Logout" method="post" class="m-0 p-0">
                    <button type="submit" class="nav-link btn btn-link p-0 text-decoration-none align-middle" style="color: #ddd; font-weight: 500;">
                        <i class="fa-solid fa-right-from-bracket"></i> Logout
                    </button>
                </form>
            </li>
        </ul>
    </div>
</nav>

<!-- Profile Section -->
<div class="profile-container">
    <div class="profile-card">
        <div class="profile-header">
            <div class="profile-avatar">
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <img src="~/images/avatars/@Model.Image" alt="Avatar" />
                }
                else
                {
                    @(!string.IsNullOrEmpty(Model.Fullname) ? Model.Fullname.Substring(0, 1) : "U")
                }
            </div>
            <div class="profile-info">
                <h2>@Model.Fullname</h2>
                <p><i class="fa-solid fa-envelope"></i> @Model.Email</p>
            </div>
        </div>

        <div class="profile-details">
            <div class="row">
                <div class="col-5"><label><i class="fa-solid fa-phone"></i> Phone:</label></div>
                <div class="col-7">@Model.Phone</div>
            </div>
            <div class="row">
                <div class="col-5"><label><i class="fa-solid fa-user-shield"></i> Role:</label></div>
                <div class="col-7">@Model.RoleName</div>
            </div>
            <div class="row">
                <div class="col-5"><label><i class="fa-solid fa-cake-candles"></i> Birthday:</label></div>
                <div class="col-7">@Model.BirthDay?.ToString("dd/MM/yyyy")</div>
            </div>
            <div class="row">
                <div class="col-5"><label><i class="fa-solid fa-venus-mars"></i> Gender:</label></div>
                <div class="col-7">@Model.Gender</div>
            </div>
            <div class="row">
                <div class="col-5"><label><i class="fa-solid fa-location-dot"></i> Address:</label></div>
                <div class="col-7">@Model.Address</div>
            </div>
            <div class="row">
                <div class="col-5"><label><i class="fa-solid fa-toggle-on"></i> Status:</label></div>
                <div class="col-7">@Model.Status</div>
            </div>
            <div class="row">
                <div class="col-5"><label><i class="fa-solid fa-calendar-plus"></i> Created At:</label></div>
                <div class="col-7">@Model.CreateAt?.ToString("dd/MM/yyyy")</div>
            </div>
            <div class="row">
                <div class="col-5"><label><i class="fa-solid fa-calendar-check"></i> Updated At:</label></div>
                <div class="col-7">@Model.UpdateAt?.ToString("dd/MM/yyyy")</div>
            </div>
        </div>

        <div class="d-flex justify-content-end gap-2 mt-4">
            <div class="mt-4 text-end">
                <a href="/Profile/Edit" class="btn-edit"><i class="fa-solid fa-pen-to-square"></i> Edit Profile</a>
            </div>
            <div class="mt-4 text-end">
                <a href="/Profile/ChangePassword" class="btn-change-password"><i class="fa-solid fa-pen-to-square"></i> Change Password</a>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
