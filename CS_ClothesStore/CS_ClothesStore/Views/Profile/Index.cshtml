@model CS_ClothesStore.Models.DTOs.AccountDTO
@{
    ViewData["Title"] = "Profile";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #f8f9fa;
        color: #222;
        font-family: 'Segoe UI', sans-serif;
    }

    .profile-card {
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        padding: 30px;
        max-width: 700px;
        margin: 50px auto;
    }

    .profile-header {
        display: flex;
        align-items: center;
        margin-bottom: 25px;
    }

    .profile-avatar {
        width: 90px;
        height: 90px;
        border-radius: 50%;
        background-color: #222;
        color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 36px;
        margin-right: 20px;
        text-transform: uppercase;
        overflow: hidden;
    }

        .profile-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .profile-info h2 {
        margin: 0;
        font-weight: 600;
    }

    .profile-info p {
        margin: 2px 0;
        color: #555;
    }

    .profile-details {
        margin-top: 20px;
    }

        .profile-details .row {
            margin-bottom: 12px;
        }

        .profile-details label {
            font-weight: 600;
            color: #333;
        }

    .btn-edit {
        background-color: #222;
        color: #fff;
        border-radius: 8px;
        padding: 8px 16px;
        text-decoration: none;
        transition: 0.3s;
    }

        .btn-edit:hover {
            background-color: #444;
            color: #fff;
        }
</style>

<div class="profile-card">
    <div class="profile-header">
        <div class="profile-avatar">
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img src="@Model.Image" alt="Avatar" />
            }
            else
            {
                @(!string.IsNullOrEmpty(Model.Fullname) ? Model.Fullname.Substring(0, 1) : "U")
            }
        </div>
        <div class="profile-info">
            <h2>@Model.Fullname</h2>
            <p>@Model.Email</p>
        </div>
    </div>

    <div class="profile-details">
        <div class="row">
            <div class="col-5"><label>Phone:</label></div>
            <div class="col-7">@Model.Phone</div>
        </div>
        <div class="row">
            <div class="col-5"><label>Role:</label></div>
            <div class="col-7">@Model.RoleName</div>
        </div>
        <div class="row">
            <div class="col-5"><label>Birthday:</label></div>
            <div class="col-7">@Model.BirthDay?.ToString("dd/MM/yyyy")</div>
        </div>
        <div class="row">
            <div class="col-5"><label>Gender:</label></div>
            <div class="col-7">@Model.Gender</div>
        </div>
        <div class="row">
            <div class="col-5"><label>Address:</label></div>
            <div class="col-7">@Model.Address</div>
        </div>
        <div class="row">
            <div class="col-5"><label>Status:</label></div>
            <div class="col-7">@Model.Status</div>
        </div>
        <div class="row">
            <div class="col-5"><label>Created At:</label></div>
            <div class="col-7">@Model.CreateAt?.ToString("dd/MM/yyyy")</div>
        </div>
        <div class="row">
            <div class="col-5"><label>Updated At:</label></div>
            <div class="col-7">@Model.UpdateAt?.ToString("dd/MM/yyyy")</div>
        </div>
    </div>

    <div class="mt-4 text-end">
        <a href="/Profile/Edit" class="btn-edit">Edit Profile</a>
    </div>
</div>
