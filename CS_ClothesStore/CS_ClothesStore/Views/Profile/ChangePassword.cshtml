@model CS_ClothesStore.Models.DTOs.ChangePasswordDTO
@{
    ViewData["Title"] = "Change Password";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #f5f6fa;
        font-family: 'Poppins', sans-serif;
    }

    .navbar {
        background: linear-gradient(90deg, #111, #444);
        padding: 10px 40px;
    }

    .navbar-brand {
        color: #fff !important;
        font-weight: 700;
        font-size: 22px;
        text-transform: uppercase;
    }

    .navbar-nav .nav-link {
        color: #ddd !important;
        margin-right: 15px;
        font-weight: 500;
    }

        .navbar-nav .nav-link:hover {
            color: #fff !important;
        }

    .change-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding: 40px 20px;
    }

    .change-card {
        background-color: #fff;
        border-radius: 16px;
        box-shadow: 0 6px 25px rgba(0,0,0,0.08);
        padding: 40px 50px;
        max-width: 500px;
        width: 100%;
        transition: 0.3s;
    }

        .change-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.12);
        }

    .form-control {
        border-radius: 8px;
        padding: 10px;
    }

    .password-group {
        position: relative;
    }

        .password-group input.form-control {
            padding-right: 40px; /* chừa chỗ cho icon */
            height: 45px; /* cố định chiều cao đồng nhất */
            line-height: 45px;
        }

    .password-toggle {
        position: absolute;
        right: 12px;
        top: 17px;
        height: 100%;
        display: flex;
        align-items: center;
        cursor: pointer;
        color: #666;
        font-size: 1rem;
        transition: color 0.3s ease;
    }

        .password-toggle:hover {
            color: #111;
        }



    .btn-save {
        background: linear-gradient(90deg, #111, #444);
        color: #fff;
        border-radius: 10px;
        padding: 10px 25px;
        font-weight: 500;
        transition: 0.3s;
    }

        .btn-save:hover {
            background: linear-gradient(90deg, #333, #666);
            color: #fff;
        }

    .btn-cancel {
        border-radius: 10px;
        padding: 10px 25px;
    }

    @@media (max-width: 768px) {
        .change-card {
            padding: 25px;
        }
    }
</style>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark">
    <a class="navbar-brand" href="/">ClothesStore</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
            <li class="nav-item"><a href="/" class="nav-link"><i class="fa-solid fa-house"></i> Home</a></li>
            <li class="nav-item"><a href="/Shop" class="nav-link"><i class="fa-solid fa-store"></i> Shop</a></li>
            <li class="nav-item"><a href="/Cart" class="nav-link"><i class="fa-solid fa-cart-shopping"></i> Cart</a></li>
            <li class="nav-item"><a href="/Profile" class="nav-link"><i class="fa-solid fa-user"></i> Profile</a></li>
            <li class="nav-item d-flex align-items-center">
                <form asp-controller="Authentication" asp-action="Logout" method="post" class="m-0 p-0">
                    <button type="submit" class="nav-link btn btn-link p-0 text-decoration-none align-middle" style="color: #ddd; font-weight: 500;">
                        <i class="fa-solid fa-right-from-bracket"></i> Logout
                    </button>
                </form>
            </li>
        </ul>
    </div>
</nav>

<!-- Change Password -->
<div class="change-container">
    <div class="change-card">
        <h3 class="text-center mb-4 fw-bold">Change Password</h3>

        <form asp-action="ChangePassword" asp-controller="Profile" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3 password-group">
                <label asp-for="OldPassword" class="form-label">Current Password</label>
                <input asp-for="OldPassword" class="form-control" type="password" required />
                <i class="fa-solid fa-eye password-toggle" onclick="togglePassword('OldPassword', this)"></i>
            </div>

            <div class="mb-3 password-group">
                <label asp-for="NewPassword" class="form-label">New Password</label>
                <input asp-for="NewPassword" class="form-control" type="password" required />
                <i class="fa-solid fa-eye password-toggle" onclick="togglePassword('NewPassword', this)"></i>
            </div>

            <div class="mb-3 password-group">
                <label for="ConfirmPassword" class="form-label">Confirm New Password</label>
                <input id="ConfirmPassword" name="ConfirmPassword" class="form-control" type="password" required />
                <i class="fa-solid fa-eye password-toggle" onclick="togglePassword('ConfirmPassword', this)"></i>
            </div>

            <div class="text-end mt-4">
                <a href="/Profile" class="btn btn-secondary btn-cancel me-2"><i class="fa-solid fa-arrow-left"></i> Cancel</a>
                <button type="submit" class="btn btn-save"><i class="fa-solid fa-lock"></i> Update Password</button>
            </div>

            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-@ViewBag.MessageType mt-4 text-center">
                    @ViewBag.Message
                </div>
            }
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Hiển thị/ẩn mật khẩu
        function togglePassword(fieldId, icon) {
        const input = document.getElementById(fieldId);
        if (!input) return;
        const isPassword = input.getAttribute("type") === "password";
        input.setAttribute("type", isPassword ? "text" : "password");
        icon.classList.toggle("fa-eye-slash");
        icon.style.color = isPassword ? "#111" : "#888";
    }

    // Xác nhận password trước khi gửi
    document.querySelector("form").addEventListener("submit", function (e) {
        const newPassword = document.getElementById("NewPassword").value;
        const confirmPassword = document.getElementById("ConfirmPassword").value;

        if (newPassword !== confirmPassword) {
            e.preventDefault();
            alert("New password and confirmation do not match!");
        }
    });
</script>
