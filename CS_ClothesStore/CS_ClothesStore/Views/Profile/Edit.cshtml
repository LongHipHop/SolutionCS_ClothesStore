@model CS_ClothesStore.Models.DTOs.AccountCUDTO
@{
    ViewData["Title"] = "Edit Profile";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #f5f6fa;
        font-family: 'Poppins', sans-serif;
    }

    .navbar {
        background: linear-gradient(90deg, #111, #444);
        padding: 10px 40px;
    }

    .navbar-brand {
        color: #fff !important;
        font-weight: 700;
        font-size: 22px;
        text-transform: uppercase;
    }

    .navbar-nav .nav-link {
        color: #ddd !important;
        margin-right: 15px;
        font-weight: 500;
    }

        .navbar-nav .nav-link:hover {
            color: #fff !important;
        }

    .edit-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding: 40px 20px;
    }

    .edit-card {
        background-color: #fff;
        border-radius: 16px;
        box-shadow: 0 6px 25px rgba(0,0,0,0.08);
        padding: 40px 50px;
        max-width: 850px;
        width: 100%;
        transition: 0.3s;
    }

        .edit-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.12);
        }

    .profile-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background-color: #333;
        color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 42px;
        text-transform: uppercase;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        margin: 0 auto 20px;
        position: relative;
    }

        .profile-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .profile-avatar input[type="file"] {
            display: none;
        }

    .upload-label {
        position: absolute;
        bottom: 0;
        right: 0;
        background-color: rgba(0, 0, 0, 0.6);
        color: #fff;
        padding: 8px;
        border-radius: 50%;
        cursor: pointer;
        transition: 0.3s;
    }

        .upload-label:hover {
            background-color: #000;
        }

    .form-control, .form-select {
        border-radius: 8px;
        padding: 10px;
    }

    .btn-save {
        background: linear-gradient(90deg, #111, #444);
        color: #fff;
        border-radius: 10px;
        padding: 10px 25px;
        font-weight: 500;
        transition: 0.3s;
    }

        .btn-save:hover {
            background: linear-gradient(90deg, #333, #666);
            color: #fff;
        }

    .btn-cancel {
        border-radius: 10px;
        padding: 10px 25px;
    }

    .btn-change-password {
        background: linear-gradient(90deg, #111, #444);
        color: #fff;
        border-radius: 10px;
        padding: 10px 25px;
        font-weight: 500;
        transition: 0.3s;
    }

        .btn-change-password:hover {
            background: linear-gradient(90deg, #333, #666);
            color: #fff;
        }


    @@media (max-width: 768px) {
        .edit-card

    {
        padding: 25px;
    }

    }
</style>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark">
    <a class="navbar-brand" href="/">ClothesStore</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
            <li class="nav-item"><a href="/" class="nav-link"><i class="fa-solid fa-house"></i> Home</a></li>
            <li class="nav-item"><a href="/Shop" class="nav-link"><i class="fa-solid fa-store"></i> Shop</a></li>
            <li class="nav-item"><a href="/Cart" class="nav-link"><i class="fa-solid fa-cart-shopping"></i> Cart</a></li>
            <li class="nav-item"><a href="/Profile" class="nav-link"><i class="fa-solid fa-user"></i> Profile</a></li>
            <li class="nav-item d-flex align-items-center">
                <form asp-controller="Authentication" asp-action="Logout" method="post" class="m-0 p-0">
                    <button type="submit" class="nav-link btn btn-link p-0 text-decoration-none align-middle" style="color: #ddd; font-weight: 500;">
                        <i class="fa-solid fa-right-from-bracket"></i> Logout
                    </button>
                </form>
            </li>
        </ul>
    </div>
</nav>

<!-- Edit Profile -->
<div class="edit-container">
    <div class="edit-card">
        <h3 class="text-center mb-4 fw-bold">Edit Your Profile</h3>

        <form asp-action="Edit" asp-controller="Profile" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <!-- Avatar -->
            <div class="profile-avatar text-center">
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <img id="avatarPreview" src="~/images/avatars/@Model.Image" alt="Avatar" />
                }
                else
                {
                    <img id="avatarPreview" src="https://cdn-icons-png.flaticon.com/512/149/149071.png" alt="Avatar" />
                }
                <label class="upload-label" for="ImgFile">
                    <i class="fa-solid fa-camera"></i>
                </label>
                <input type="file" asp-for="ImgFile" id="ImgFile" accept="image/*" onchange="previewImage(event)" />
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Fullname" class="form-label">Full Name</label>
                    <input asp-for="Fullname" class="form-control" required />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" type="email" required />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Phone" class="form-label">Phone</label>
                    <input asp-for="Phone" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="BirthDay" class="form-label">Birthday</label>
                    <input asp-for="BirthDay" class="form-control" type="date" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Gender" class="form-label">Gender</label>
                    <select asp-for="Gender" class="form-select">
                        <option value="">-- Select --</option>
                        <option value="Male" selected="@(Model.Gender == "Male")">Male</option>
                        <option value="Female" selected="@(Model.Gender == "Female")">Female</option>
                        <option value="Other" selected="@(Model.Gender == "Other")">Other</option>
                    </select>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Address" class="form-label">Address</label>
                    <input asp-for="Address" class="form-control" />
                </div>
            </div>

            <div class="text-end mt-4">
                <a href="/Profile" class="btn btn-secondary btn-cancel me-2"><i class="fa-solid fa-arrow-left"></i> Cancel</a>
                <a href="/Profile/ChangePassword" class="btn btn-change-password"><i class="fa-solid fa-pen-to-square"></i> Change Password</a>
                <button type="submit" class="btn btn-save"><i class="fa-solid fa-floppy-disk"></i> Save Changes</button>
            </div>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    function previewImage(event) {
        const input = event.target;
        const reader = new FileReader();
        reader.onload = function () {
            const avatar = document.getElementById('avatarPreview');
            avatar.src = reader.result;
        };
        if (input.files && input.files[0]) {
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
